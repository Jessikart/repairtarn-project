{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        { "slug": "primary", "name": "Bleu primaire", "color": "#1E88E5" },
        { "slug": "secondary", "name": "Orange secondaire", "color": "#FFB300" },
        { "slug": "success", "name": "Vert succ√®s", "color": "#4CAF50" },
        { "slug": "background", "name": "Fond", "color": "#FAFAFA" },
        { "slug": "text", "name": "Texte", "color": "#2C3E50" },
        { "slug": "card", "name": "Fond carte", "color": "#F5F7FA" }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "slug": "inter",
          "fontFamily": "Inter, system-ui, -apple-system, BlinkMacSystemFont, sans-serif",
          "name": "Inter"
        }
      ],
      "fontSizes": [
        { "slug": "body", "name": "Texte", "size": "16px" },
        { "slug": "h3", "name": "Titre H3", "size": "20px" },
        { "slug": "h2", "name": "Titre H2", "size": "32px" },
        { "slug": "h1", "name": "Titre H1", "size": "40px" },
        { "slug": "small", "name": "Petit", "size": "14px" }
      ]
    },
    "spacing": {
      "units": ["px", "em", "rem"],
      "spacingScale": {
        "steps": 5,
        "mediumStep": 1,
        "unit": "px"
      }
    },
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "var(--wp--preset--font-size--body)",
      "lineHeight": "1.6"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--inter)",
          "fontWeight": "700",
          "lineHeight": "1.3"
        },
        "color": {
          "text": "#2C3E50"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      }
    },
    "blocks": {
      "core/button": {
        "border": { "radius": "999px" },
        "typography": { "fontWeight": "600" },
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "#FFFFFF"
        },
        "spacing": {
          "padding": {
            "top": "12px",
            "right": "32px",
            "bottom": "12px",
            "left": "32px"
          }
        }
      }
    }
  }
}
